#include "IntVec.h"
#include "GridField.h"
#include "UnitCell.h"

template <int D>
class Grid {

   void setUnitCell(const UnitCell& unitCell)
   void setDimensions(IntVec<D>);
   void allocate()
   void deallocate()
   void computeKSq()
   IntVec<D> kToFFT(IntVec<D>)
   IntVec<D> kToBZ(IntVec<D>)
   void computeMaxKabs()

   const GridField& kSq()
   double maxKSq()

private:

   IntVec<D> dimensions_
   GridField ksq_;
   double maxKSq_;

}
